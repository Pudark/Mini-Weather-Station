{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "type": "shell",
            "command": "make",
            "args": ["all"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Clean Build",
            "type": "shell", 
            "command": "make",
            "args": ["clean"],
            "group": "build"
        },
        {
            "label": "Flash to Device",
            "type": "shell",
            "command": "make", 
            "args": ["flash"],
            "group": "build"
        }
    ]
}